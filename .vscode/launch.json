{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI (Uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app", // Точка входа. Если ваш файл называется app.py, замените на "app:app"
                "--reload", // Авто-перезагрузка при сохранении кода
                "--port",
                "8000" // Порт сервера
            ],
            "jinja": true, // Включаем, если планируете использовать шаблоны HTML
            "justMyCode": true // Дебаггер не будет заходить во внутренности библиотек
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}